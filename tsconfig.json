{
    "compilerOptions": {
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "experimentalDecorators": true,
        "target": "ES2017",
        "module": "ES2015",
        "moduleResolution": "Node10",
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2017", "DOM", "DOM.Iterable"],
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
        "incremental": true,
        "outDir": "./dist",
    },

    "include": [
        "./src/**/*.ts"
    ]
}
